 <body>
 <div id="main" style="width:400px;height:400px"></div>
 <script type="text/javascript">
	var mychart = echarts.init(document.getElementById("main"));
	var option = {
		xAxis:{
			type:"category",
			boundaryGap:false,
			data:["周一","周二","周三"]
		},
		yAxis:{
			type:"value"
		},
		series:{
			data:[3,2,3],
			type:"line",
			smooth:true,
		}
	};
	mychart.setOption(option);
 </script>
  
